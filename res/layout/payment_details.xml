<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_simobi"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:background="@layout/rounded"
            android:orientation="vertical"
            android:padding="15dp" >

            <LinearLayout
                android:id="@+id/mdnLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_paymentDestMDN"
                    style="@style/font_style_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Destination MDN" >
                </TextView>

                <EditText
                    android:id="@+id/ed_mdnValue"
                    style="@style/text_box_style"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="number" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/amountLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_paymentAmount"
                    style="@style/font_style_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=" Amount" >
                </TextView>

                <EditText
                    android:id="@+id/ed_amountValue"
                    style="@style/text_box_style"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="number" >
                </EditText>
            </LinearLayout>
