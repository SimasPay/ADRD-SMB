<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_simobi"
    tools:context=".Home" >

    <include
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_margin="15dp"
        android:background="@layout/rounded"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_paymentCategory"
                style="@style/font_style_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Product Category" />

            <Spinner
                android:id="@+id/productCategory"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@drawable/spinner" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_spin2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_paymentProvider"
                style="@style/font_style_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Provider" />

            <Spinner
                android:id="@+id/provider"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@drawable/spinner" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_spin3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_paymentType"
                style="@style/font_style_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Product Type" />

            <Spinner
                android:id="@+id/productType"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@drawable/spinner" />
        </LinearLayout>

        <Button
            android:id="@+id/continue_button"
            style="@style/font_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_empty"
            android:text="Next" />
    </LinearLayout>

