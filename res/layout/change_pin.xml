<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_simobi"
    android:orientation="vertical" >
 <include
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/header" />
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/rounded"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_oldPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your old mPIN"
                 style="@style/font_style_spinner" >
            </TextView>

            <EditText
                android:id="@+id/oldPinEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="6"
                android:password="true" 
                style="@style/text_box_style">
            </EditText>

            <TextView
                android:id="@+id/textView_newPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your new mPIN  "
                android:layout_marginTop="10dp"
                 style="@style/font_style_spinner">
            </TextView>

            <EditText
                android:id="@+id/newpinEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="6"
                android:password="true" 
                style="@style/text_box_style">
            </EditText>

            <TextView
                android:id="@+id/textView_confirmNewPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-enter your new mPIN "
                 android:layout_marginTop="10dp"
                 style="@style/font_style_spinner" >
            </TextView>

            <EditText
                android:id="@+id/reNewPinEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:password="true" 
                style="@style/text_box_style">
            </EditText>

            <Button
                android:id="@+id/okButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="Submit"
                style="@style/font_button"
                android:background="@drawable/button_empty" >
            </Button>
        </LinearLayout>
    </ScrollView>
