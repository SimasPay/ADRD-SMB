                style="@style/text_box_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:maxLength="6" >
            </EditText>

            <RelativeLayout
