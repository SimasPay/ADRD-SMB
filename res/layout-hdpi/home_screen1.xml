	<RelativeLayout
	    android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#3A3A3B">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logout_button" />
	</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/header"
        android:layout_above="@id/footer" >

        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
        	android:orientation="vertical">
            
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_gravity="center_horizontal">
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:id="@+id/imageView1"
	                    android:layout_width="90dp"
	                    android:layout_height="90dp"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/fund_transfer" />
	
	                <TextView
	                    android:id="@+id/textView1"
	                    style="@style/below_icon_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="Transfer" />
	            </LinearLayout>
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:id="@+id/imageView3"
	                    android:layout_width="90dp"
	                    android:layout_height="90dp"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/buy_button" />
	
	                <TextView
	                    android:id="@+id/textView2"
	                    style="@style/below_icon_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="Purchase" />
	            </LinearLayout>
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="16dp">
				<LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:id="@+id/qrPayment"
	                    android:layout_width="90dp"
	                    android:layout_height="90dp"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/qr_payment" />
	
	                <TextView
	                    android:id="@+id/qrText"
	                    style="@style/below_icon_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="QR Payment" />
	            </LinearLayout>
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:id="@+id/imageViewPromo"
	                    android:layout_width="90dp"
	                    android:layout_height="90dp"
	                    android:src="@drawable/promo_button" />
	
	                <TextView
	                    android:id="@+id/textViewPromo"
	                    style="@style/below_icon_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="Promo" />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="16dp" >
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:id="@+id/imageView2"
	                    android:layout_width="90dp"
	                    android:layout_height="90dp"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/bil_button" />
	
	                <TextView
	                    android:id="@+id/textView3"
	                    style="@style/below_icon_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="Payment" />
	            </LinearLayout>
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:id="@+id/imageView4"
	                    android:layout_width="90dp"
	                    android:layout_height="90dp"
	                    android:src="@drawable/accounts_button" />
	
	                <TextView
	                    android:id="@+id/textView4"
	                    style="@style/below_icon_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="Account" />
	            </LinearLayout>
	        </LinearLayout>
    	</LinearLayout>
	</RelativeLayout>

</RelativeLayout>