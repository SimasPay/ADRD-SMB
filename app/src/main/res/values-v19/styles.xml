<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <color name="redsinarmas">#D60404</color>
    <color name="white">#fff</color>
    <color name="black">#000</color>

    <style name="AppBaseTheme" parent="Base.Theme.AppCompat">
        <item name="colorControlNormal">@color/redsinarmas</item>
        <item name="colorControlActivated">@color/redsinarmas</item>
        <item name="colorControlHighlight">@color/redsinarmas</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- Text styles -->

    <style name="AppNoTitleBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="colorControlNormal">@color/redsinarmas</item>
        <item name="colorControlActivated">@color/redsinarmas</item>
        <item name="colorControlHighlight">@color/redsinarmas</item>
        <item name="android:alertDialogStyle">@style/AlertDialog_Sphinx</item>
    </style>

    <style name="font_button">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle"> bold</item>
    </style>

    <style name="font_style_spinner">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle"> bold</item>
    </style>

    <style name="title_font_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle"> bold</item>
    </style>

    <style name="below_icon_text">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle"> bold</item>
    </style>

    <style name="text_box_style">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
    </style>

    <style name="MyAlertDialogStyle" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Sphinx</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Sphinx.Button.Borderless</item>
        <item name="android:buttonBarStyle">@style/Sphinx.ButtonBar.AlertDialog</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:fullDark">@color/black</item>
        <item name="android:topDark">@color/black</item>
        <item name="android:centerDark">@color/black</item>
        <item name="android:bottomDark">@color/black</item>
        <item name="android:fullBright">@color/black</item>
        <item name="android:topBright">@color/black</item>
        <item name="android:centerBright">@color/black</item>
        <item name="android:bottomBright">@color/black</item>
        <item name="android:bottomMedium">@color/black</item>
        <item name="android:centerMedium">@color/black</item>
    </style>

    <style name="AlertDialog_Sphinx">
        <item name="android:fullDark">@color/black</item>
        <item name="android:topDark">@color/black</item>
        <item name="android:centerDark">@color/black</item>
        <item name="android:bottomDark">@color/black</item>
        <item name="android:fullBright">@color/black</item>
        <item name="android:topBright">@color/black</item>
        <item name="android:centerBright">@color/black</item>
        <item name="android:bottomBright">@color/black</item>
        <item name="android:bottomMedium">@color/black</item>
        <item name="android:centerMedium">@color/black</item>
    </style>

    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">#cccccc</item>
        <item name="colorControlNormal">@color/redsinarmas</item>
        <item name="colorControlActivated">@color/redsinarmas</item>
        <item name="colorControlHighlight">@color/redsinarmas</item>
    </style>

    <style name="TextAppearance.Sphinx.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogWindowTitle.Sphinx" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogWindowTitle</item>
    </style>

    <style name="Widget.Sphinx.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/redsinarmas</item>
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogButton</item>
    </style>

    <style name="TextAppearance.Sphinx.DialogButton" parent="@android:style/TextAppearance.Holo.Medium"></style>

    <style name="Sphinx.ButtonBar.AlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background</item>
    </style>

</resources>